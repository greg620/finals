<%= content_for :mdeditor_css do %>
    <%= stylesheet_link_tag 'mdeditor' %>
<% end %>
<%= content_for :mdeditor_js do %>
    <%= javascript_include_tag 'mdeditor.min' %>
    <script>
      new MdEditor('#post_content', {
          preview: true
      });
    </script>
<% end %>

<h2>Créer un brouillon</h2>

<% if @draft.errors.any? %>
    <div class="alert alert-danger">
      <% @draft.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
<% end %>

<%= form_for @draft, url: draft_new_path, remote: true do |f| %>
    <div class="form-group">
      <%= f.label :title, "Titre" %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content, "Contenu" %>
      <%= f.text_area :content %>
    </div>
    <div class="form-group">
      <%= f.submit 'Créer', class: 'btn btn-success' %>
    </div>
<% end %>