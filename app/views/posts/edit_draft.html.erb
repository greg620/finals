<%= content_for :mdeditor_css do %>
    <%= stylesheet_link_tag 'mdeditor' %>
<% end %>
<%= content_for :mdeditor_js do %>
    <%= javascript_include_tag 'mdeditor.min' %>
    <script>
        new MdEditor('#post_content', {
            preview: true
        });
    </script>
<% end %>

<h2>Editer l'article</h2>

<% if @draft.errors.any? %>
    <div class="alert alert-danger">
      <% @draft.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
    </div>
<% end %>

<%= form_for @draft, url: edit_draft_path do |f| %>
    <div class="form-group">
      <%= f.label :title, "Titre" %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content, "Contenu" %>
      <%= f.text_area :content %>
    </div>
    <div class="form-group">
      <%= f.submit 'Mettre Ã  jour', class: 'btn btn-success' %>
    </div>
<% end %>