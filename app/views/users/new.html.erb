<h2>S'inscrire</h2>

<% if @user.errors.any? %>
    <div class="alert alert-danger">
      <strong>OOoo0ps</strong>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
<% end %>

<%= form_for @user do |f| %>
    <div class="form-group<% if @user.errors.full_messages_for(:username).first %> has-error has-feedback<% end %>">
      <%= f.label :username, "Nom d'utilisateur" %>
      <%= f.text_field :username, class: 'form-control' %>
      <% if @user.errors.full_messages_for(:username).first %>
        <span class="glyphicon glyphicon-remove form-control-feedback" style="top: 42%;"></span>
      <% end %>
    </div>
    <div class="form-group<% if @user.errors.full_messages_for(:email).first %> has-error has-feedback<% end %>">
      <%= f.label :email, "Email" %>
      <%= f.text_field :email, class: 'form-control' %>
      <% if @user.errors.full_messages_for(:email).first %>
          <span class="glyphicon glyphicon-remove form-control-feedback" style="top: 42%;"></span>
      <% end %>
    </div>
    <div class="form-group<% if @user.errors.full_messages_for(:password).first %> has-error has-feedback<% end %>">
      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, class: 'form-control' %>
      <% if @user.errors.full_messages_for(:password).first %>
          <span class="glyphicon glyphicon-remove form-control-feedback" style="top: 42%;"></span>
      <% end %>
    </div>
    <div class="form-group<% if @user.errors.full_messages_for(:password_confirmation).first %> has-error has-feedback<% end %>">
      <%= f.label :password_confirmation, "Confirmation du mot de passe" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <% if @user.errors.full_messages_for(:password_confirmation).first %>
          <span class="glyphicon glyphicon-remove form-control-feedback" style="top: 42%;"></span>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.submit "S'inscrire", class: 'btn btn-success' %>
    </div>
<% end %>