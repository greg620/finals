<h2>Se connecter</h2>

<%= form_for :user, url: new_session_path do |f| %>
    <div class="form-group">
      <%= f.label :username, "Nom d'utilisateur ou email" %>
      <%= f.text_field :username, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'Se connecter', class: 'btn btn-success' %>
    </div>
<% end %>